<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="developersancho.parkkit.ui.menu.MenuViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/menu_bg5"
            android:fitsSystemWindows="false"
            android:scrollbars="none"
            app:elevation="0.0dip"
            app:itemIconTint="@color/whitelilac"
            app:itemTextAppearance="@style/NavigationDrawerTextStyle"
            app:itemTextColor="@color/whitelilac"
            app:theme="@style/NavigationDrawerStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/sidebarHomeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20.0dip">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/fredoka"
                            android:text="@string/menu_title"
                            android:textColor="@color/whitelilac"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dip">

                        <ImageView
                            android:id="@+id/img_bildirimler"
                            android:layout_width="17.0dip"
                            android:layout_height="17.0dip"
                            android:layout_gravity="center"
                            android:layout_marginRight="13.0dip" />

                        <ImageView
                            android:id="@+id/img_ayarlar"
                            android:layout_width="17.0dip"
                            android:layout_height="17.0dip"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu_ayarlar" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="223.0dip"
                    android:layout_height="10.0dip"
                    android:layout_marginLeft="28.0dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="26.0dip"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_menu_divider"
                        android:layout_width="fill_parent"
                        android:layout_height="10.0dip"
                        android:src="@drawable/divider_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:weightSum="5.0">

                    <ExpandableListView
                        android:id="@+id/navigationmenu"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:choiceMode="singleChoice"
                        android:divider="@null"
                        android:dividerHeight="0.0dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10.0dip"
                        android:layout_weight="4.0"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_divider"
                            android:layout_width="fill_parent"
                            android:layout_height="10.0dip"
                            android:layout_marginLeft="28.0dip"
                            android:layout_marginRight="26.0dip"
                            android:src="@drawable/divider_horizontal" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="56.0dip"
                            android:layout_marginRight="52.0dip"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="3.0">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/fredoka"
                                android:text="@string/menu_version"
                                android:textAlignment="center"
                                android:textColor="@color/whitelilac"
                                android:textSize="16sp" />

                            <!--<ImageView
                                android:id="@+id/img_facebook"
                                android:layout_width="17.0dip"
                                android:layout_height="17.299988dip"
                                android:layout_weight="1.0"
                                android:src="@drawable/ic_fb_menu" />

                            <ImageView
                                android:id="@+id/img_twitter"
                                android:layout_width="16.699982dip"
                                android:layout_height="14.0dip"
                                android:layout_weight="1.0"
                                android:src="@drawable/ic_tw_menu" />

                            <ImageView
                                android:id="@+id/img_instagram"
                                android:layout_width="17.299988dip"
                                android:layout_height="17.299988dip"
                                android:layout_weight="1.0"
                                android:src="@drawable/ic_in_menu" />-->
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>